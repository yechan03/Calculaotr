<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="7"
    android:orientation="vertical"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FB8C00"
            android:layout_margin="2dp"
            android:text="A\C"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#FB8C00"
            android:textSize="30sp"
            android:text="%"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FB8C00"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="x"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FB8C00"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="â† "/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B9ABAB"
            android:layout_margin="2dp"
            android:text="7"
            android:textSize="50sp"
            android:gravity="center"
            android:textColor="#000"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B9ABAB"
            android:layout_margin="2dp"
            android:text="8"
            android:textSize="50sp"
            android:gravity="center"
            android:textColor="#000"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B9ABAB"
            android:layout_margin="2dp"
            android:text="9"
            android:textSize="50sp"
            android:gravity="center"
            android:textColor="#000"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FB8C00"
            android:layout_margin="2dp"
            android:text="/"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B9ABAB"
            android:layout_margin="2dp"
            android:text="4"
            android:textSize="50sp"
            android:gravity="center"
            android:textColor="#000"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B9ABAB"
            android:layout_margin="2dp"
            android:text="5"
            android:textSize="50sp"
            android:gravity="center"
            android:textColor="#000"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B9ABAB"
            android:layout_margin="2dp"
            android:text="6"            android:textSize="50sp"
            android:gravity="center"
            android:textColor="#000"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#FB8C00"
            android:text="-"
            android:textSize="30sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B9ABAB"
            android:layout_margin="2dp"
            android:text="3"
            android:textSize="50sp"
            android:gravity="center"
            android:textColor="#000"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B9ABAB"
            android:layout_margin="2dp"
            android:text="2"            android:textSize="50sp"
            android:gravity="center"
            android:textColor="#000"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B9ABAB"
            android:layout_margin="2dp"
            android:text="1"
            android:textSize="50sp"
            android:gravity="center"
            android:textColor="#000"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FB8C00"
            android:layout_margin="2dp"
            android:text="+"
            android:textSize="30sp"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#B9ABAB"
            android:layout_margin="2dp"
            android:text="0"
            android:textSize="50sp"
            android:gravity="center"
            android:textColor="#000"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B9ABAB"
            android:layout_margin="2dp"
            android:text="."
            android:textSize="50sp"
            android:gravity="center"
            android:textColor="#000"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FB8C00"
            android:layout_margin="2dp"
            android:text="="
            android:textSize="30sp"/>


    </LinearLayout>

</LinearLayout>